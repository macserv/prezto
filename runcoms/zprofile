#
# Executes commands at login pre-zshrc.
#
# Authors:
#   Sorin Ionescu <sorin.ionescu@gmail.com>
#

#
# Browser
#

if [[ "$OSTYPE" == darwin* ]]; then
  export BROWSER='open'
fi

#
# Editors
#

export EDITOR='nano'
export VISUAL='nano'
export PAGER='less'

#
# Language
#

if [[ -z "$LANG" ]]; then
  export LANG='en_US.UTF-8'
fi

#
# Paths
#

# Ensure path arrays do not contain duplicates.
typeset -gU cdpath fpath mailpath path

# Set the list of directories that cd searches.
cdpath=(
  ${cdpath}
  ~/Projects/Development
)

# Set the list of directories that Zsh searches for programs.
path=(
  ~/Local/bin
  /usr/local/{bin,sbin}
  /usr/local/Homebrew/{bin,sbin}
  /usr/local/share/dotnet
  $path
)

#
# Less
#

# Set the default Less options.
# Mouse-wheel scrolling has been disabled by -X (disable screen clearing).
# Remove -X and -F (exit if the content fits on one screen) to enable it.
# export LESS='-F -g -i -M -R -S -w -X -z-4'
export LESS='-g -i -M -R -S -w -z-4'

# Set the Less input preprocessor.
# Try both `lesspipe` and `lesspipe.sh` as either might exist on a system.
if (( $#commands[(i)lesspipe(|.sh)] )); then
  export LESSOPEN="| /usr/bin/env $commands[(i)lesspipe(|.sh)] %s 2>&-"
fi


#
# Java
#

# Dynamically set JAVA_HOME to the currently selected JVM.
# Fail silently if it's not present.
export JAVA_HOME="$(/usr/libexec/java_home > /dev/null 2>&1; trap)"


#
# Python
#

export PYTHONSTARTUP="/Users/v076726/.pythonrc"


#
# Homebrew
#

export HOMEBREW_CASK_OPTS="--appdir=~/Applications"


#
# HTTP Proxies
# Define proxy values as variables, so that they can be used both here,
# and in "aliases.mine" by the `setproxy` alias.
#

export http_proxy_value='http://proxy.jpmchase.net:8443'
export https_proxy_value='http://proxy.jpmchase.net:8443'
export all_proxy_value='http://proxy.jpmchase.net:8443'
export no_proxy_value='frs-art.jpmchase.net,frs-art.dr7glb.jpmchase.net,bitbucketdc-digital-ssh.jpmchase.net,.jpmchase.net,localhost'

export HTTP_PROXY="${http_proxy_value}"
export HTTPS_PROXY="${https_proxy_value}"
export ALL_PROXY="${all_proxy_value}"
export NO_PROXY="${no_proxy_value}"

export http_proxy="${HTTP_PROXY}"
export https_proxy="${HTTPS_PROXY}"
export all_proxy="${ALL_PROXY}"
export no_proxy="${NO_PROXY}"


